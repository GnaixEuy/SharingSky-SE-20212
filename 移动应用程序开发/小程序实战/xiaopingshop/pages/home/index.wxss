@import  '../templates/products/products.wxss';

/* 搜索 */
.search-box{
  position:sticky;
  border-radius: 10rpx;
  background-color: #f7f7f7;
  height: 70rpx;
  top:0;
  z-index:999;
}

.search-box input{
  font-size: 28rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  height: 70rpx;
  line-height: 70rpx;
  color: #666;
}
.search-box .icons{
  position:absolute;
  left:15rpx;
  top: 10rpx;
}

/* 轮播图 */
.swiper{
  width: 100%;
  height:400rpx;
}
.swiper-item{
  height:100%;
  width:100%;
}
.swiper-item image{
  width:100%;
  height:100%;
}

/* 推荐新品标题 */
.home-main-header{
  display: flex;
  height: 60rpx;
  color:orange;
  background-color: #fff;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
}
